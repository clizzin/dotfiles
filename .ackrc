--type-set=md=.md

# Don't ignore haml, mustache, sass, coffee.
--type-add=html=.haml
--type-set=mustache=.mustache
--type-add=css=.sass,.scss
--type-add=js=.coffee

# Hive QL files
--type-set=hql=.ql
--type-add=hql=.hql

# Ignore a bunch of directories that have lots of noise.
--ignore-dir=coverage
--ignore-dir=public/ext
--ignore-dir=public/images
--ignore-dir=public/assets
--ignore-dir=tmp/capybara
--ignore-dir=tmp/emails
--ignore-dir=log
--ignore-dir=tiny_mce
--ignore-dir=ckeditor
--ignore-dir=Jit
--ignore-dir=vendor
--ignore-dir=google_geocoder
