# Git branch prompt completion
. /usr/local/Cellar/git/1.7.4.3/etc/bash_completion.d/git-completion.bash

# Bash prompt
# export PS1="\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\]$ "
export PS1="\[\033[01;32m\]\w\$(__git_ps1) \[\033[00m\]$ "

# Add higher-priority binaries to PATH
export PATH=/usr/local/mysql/bin:$PATH              # MySQL
export PATH=/usr/local/bin:$PATH                    # Homebrew binaries
# export PATH=/opt/local/bin:/opt/local/sbin:$PATH  # MacPorts

# Make the Ruby MySQL gem work
export DYLD_LIBRARY_PATH=/usr/local/mysql/lib

# Colors
alias ls='ls -G'

# less with Vim settings
alias vless=/usr/share/vim/vim72/macros/less.sh

# Java
export JAVA_HOME=$(/usr/libexec/java_home)
export JAVA_OPTS=-Xmx2048m

# Hadoop
export HADOOP_INSTALL=/Users/clizzin/code/hadoop-0.20.2-CDH3B4
export HADOOP_HOME=$HADOOP_INSTALL
export PATH=$PATH:$HADOOP_INSTALL/bin
# export HBASE_HOME=/Users/clizzin/code/hbase-0.89.20100924+28

