# Git branch prompt completion
. /usr/local/Cellar/git/1.7.3.1/etc/bash_completion.d/git-completion.bash

# Bash prompt
# export PS1="\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\]$ "
export PS1="\[\033[01;32m\]\w\$(__git_ps1) \[\033[00m\]$ "

# Add higher-priority binaries to PATH
export PATH=/opt/local/bin:/opt/local/sbin:$PATH    # MacPorts
export PATH=/usr/local/bin:$PATH                    # Homebrew binaries

# Colors
alias ls='ls -G'

# Java
export JAVA_HOME=$(/usr/libexec/java_home)
export JAVA_OPTS=-Xmx2048m

# Hadoop
export HADOOP_INSTALL=/Users/clizzin/code/hadoop-0.20.2+737
export HADOOP_HOME=$HADOOP_INSTALL
export PATH=$PATH:$HADOOP_INSTALL/bin
export HBASE_HOME=/Users/clizzin/code/hbase-0.89.20100924+28

# Mahout
export MAHOUT_HOME=/Users/clizzin/code/mahout-distribution-0.4  # 0.4 release
export PATH=$PATH:$MAHOUT_HOME/bin

# Amazon Elastic MapReduce Ruby client
export PATH=$PATH:/Users/clizzin/code/elastic-mapreduce-ruby

# Amazon S3cmd
export PATH=$PATH:/Users/clizzin/code/s3cmd-1.0.0-rc1

# Nutch
export NUTCH_HOME=/Users/clizzin/code/apache-nutch-1.1
export PATH=$PATH:$NUTCH_HOME/bin

# Loads RVM into a shell session
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
