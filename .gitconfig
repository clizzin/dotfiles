[advice]
  statusHints = false
[branch]
  autosetupmerge = true
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[core]
  autocrlf = false
  editor = vim
  precomposeunicode = true
[diff]
  # see notes at https://blog.gitbutler.com/how-git-core-devs-configure-git/
  algorithm = histogram
  colorMoved = plain
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject instead of
  # a/b/c/d as prefixes for patches
  mnemonicprefix = true
  renames = true
[format]
  pretty = format:commit %C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[include]
  path = ~/.gitconfig.user
[merge]
  verbosity = 1
[push]
  default = current
[rerere]
  enabled = true
